    @await Html.PartialAsync("_Item_User_Footer")

    <!--                      Modal                               -->

    <div id="upl-food" class="frame-upl-food" style="z-index: 2072;">
      <div class="modal">
        <span class="text-box">Đặt bàn</span>
        <div class="out-add-cus">
          <h3>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onClick="an()">×</button>
          </h3>
        </div>

        <div class="body-box">
            <div class="input-cus2">
              <input type="text" name="full-name" required >
              <label for="full-name">
              <span>
                  Tên đăng ký
              </span>
              </label>
            </div>

            <div class="input-cus2">
              <input type="text" name="full-name" required >
              <label for="full-name">
              <span>
                  Số điện thoại
              </span>
              </label>
            </div>
            <div class="input-cus3">
                <div class="form-row">
                    <div class="col-md-5">
                        <div class="form-group">
                          <label class="small mb-1" for="themChiTietDatBanNgayThangLap">Ngày tháng lập </label>
                          <input class="form-control py-1 px-2 d-flex align-item-center thoi_gian_lap" id="themChiTietDatBanNgayThangLap" type="date" placeholder="Nhập thời gian lập">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                          <label class="small mb-1" for="themChiTietDatBanThoiGianLap">Thời gian lập </label>
                          <input class="form-control py-1 px-2 d-flex align-item-center thoi_gian_lap" id="themChiTietDatBanThoiGianLap" type="time" step="1" placeholder="Nhập thời gian lập">
                        </div>
                    </div>
                </div>
            </div>
            <div class="input-cus3">
                <div class="form-row">
                    <div class="col-md-5">
                        <div class="form-group">
                          <label class="small mb-1" for="themChiTietDatBanNgayThangLap">Ngày tháng nhận </label>
                          <input class="form-control py-1 px-2 d-flex align-item-center thoi_gian_lap" id="themChiTietDatBanNgayThangLap" type="date" placeholder="Nhập thời gian lập">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                          <label class="small mb-1" for="themChiTietDatBanThoiGianLap">Thời gian nhận </label>
                          <input class="form-control py-1 px-2 d-flex align-item-center thoi_gian_lap" id="themChiTietDatBanThoiGianLap" type="time" step="1" placeholder="Nhập thời gian lập">
                        </div>
                    </div>
                </div>
            </div>

            <div class="input-cus4">
              <input type="text" name="full-name" required >
              <label for="full-name">
              <span>
                  Ghi chú
              </span>
              </label>
            </div>



            <a href="" class="btn-box-add-cus"><i class="fas fa-check"></i>Xác nhận</a>
            <a  class="btn-box-canl-cus" onClick="an()"><i class="fas fa-times" ></i>Huỷ bỏ</a>
        </div>
      </div>
    </div>

